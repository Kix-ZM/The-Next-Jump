	<aug name="ION_ARMOR">
		<statBoosts>
			<statBoost name="stunMultiplier">
				<boostType>MULT</boostType>
				<shipTarget>ALL</shipTarget>
				<crewTarget>ALLIES</crewTarget>
				<droneTarget>CREW</droneTarget>
				<amount>0.5</amount>
				<priority>999</priority>
				<systemRoomTarget>ALL</systemRoomTarget>
				<systemList>
				  <shields/>
				</systemList>
			</statBoost>
		</statBoosts>
    </aug>
	<aug name="NANO_MEDBAY">
		<statBoosts>
			<statBoost name="healAmount">
				<boostType>FLAT</boostType>
				<shipTarget>ORIGINAL_SHIP</shipTarget>
				<crewTarget>ALLIES</crewTarget>
				<droneTarget>CREW</droneTarget>
				<amount>1.6</amount>
				<priority>0</priority>
				<systemPowerDependency>
					<medbay/>
				</systemPowerDependency>
				<systemPowerScaling>
					<noSys>0</noSys>
					<noPwr>0</noPwr>
					<onePwr>1</onePwr>
					<twoPwr>1.5</twoPwr>
					<threePwr>3</threePwr>
				</systemPowerScaling>
				<systemRoomTarget>NONE</systemRoomTarget>
				<systemList>
				  <medbay/>
				</systemList>
			</statBoost>
		</statBoosts>
    </aug>
	<aug name="SAFETY_BLANKETS">
		<statBoosts>
			<statBoost name="fireDamageMultiplier">
				<boostType>MULT</boostType>
				<shipTarget>ALL</shipTarget>
				<crewTarget>ALLIES</crewTarget>
				<droneTarget>CREW</droneTarget>
				<amount>0.25</amount>
				<priority>999</priority>
				<systemRoomTarget>ALL</systemRoomTarget>
				<systemList>
				  <medbay/>
				</systemList>
			</statBoost>
			<statBoost name="canSuffocate">
				<boostType>MULT</boostType>
				<shipTarget>ALL</shipTarget>
				<crewTarget>ALLIES</crewTarget>
				<droneTarget>CREW</droneTarget>
				<amount>0.25</amount>
				<priority>999</priority>
				<systemRoomTarget>ALL</systemRoomTarget>
				<systemList>
				  <medbay/>
				</systemList>
			</statBoost>
			<statBoost name="stunMultiplier">
				<boostType>MULT</boostType>
				<shipTarget>ALL</shipTarget>
				<crewTarget>ALLIES</crewTarget>
				<droneTarget>CREW</droneTarget>
				<amount>0</amount>
				<priority>999</priority>
				<systemRoomTarget>ALL</systemRoomTarget>
				<systemList>
				  <medbay/>
				</systemList>
			</statBoost>
		</statBoosts>
    </aug>
</augments>

